html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/style.css")
        title Slider training
    body
        .wrapper
            .banner
                a(href="#"): .banner-static
                    img(src="src/img/logo.png", alt="logo").banner-static-logo
                .banner-section
                    img.slide(src="src/img/slider/1.png", alt="Nissan GT-R Black photo")
                    img.slide(src="src/img/slider/2.png", alt="Nissan GT-R Black photo")
                .banner-controller
                    button.banner-controller__next: img(src="src/img/ico/arrow.svg", alt="<")
                    button.banner-controller__prev: img(src="src/img/ico/arrow.svg", alt=">")

        script(src="src/script/script.js") 